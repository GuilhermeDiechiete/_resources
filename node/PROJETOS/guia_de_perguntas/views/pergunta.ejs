<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <a href="/" class="btn btn-primary">Voltar</a>
        <hr>
        <h1><%= pergunta.titulo %></h1>
        <p><%= pergunta.descricao %></p>
        <hr>
        <form action="/responder" method="post">
            <label>Deixe sua <strong>resposta</strong> e ajude a comunidade.</label>
            <textarea name="corpo" placeholder="Digite a resposta..." class="form-control"></textarea>
            
            <br>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <button type="submit" class="btn btn-primary">Responder</button>
        </form>
        <hr>
        <h3>Respostas</h3>
        <hr>
        <% respostas.forEach(resposta => { %>
            <div class="card">
                <div class="card-body">
                    <%= resposta.corpo %>
                </div><br>
            </div>
        <% } )%>
    </div> 
</body>
<%- include ('partials/footer.ejs') %>
