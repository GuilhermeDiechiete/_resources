<div class="container">
    
    <ul class="task-list">
        <h2>Todas as Tasks</h2>
        {{#each tasks}}
        <li>

            {{#if this.done}}
                <a href="/" class="done">{{this.title}}</a>
            {{else}}
                <a href="/" class="title">{{this.title}}</a>
            {{/if}}

            <div class="actions">
                <form action="/tasks/status" class="form-all" method="post">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <input type="hidden" name="done" value="{{this.done}}">
                    <button class="btn" type="submit">
                        <i class="bi bi-check2"></i>
                    </button>
                </form>


                <a href="/tasks/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a>




                <form class="form-all" action="/tasks/remove" method="post">
                    <input type="hidden" name="id" value="{{this.id}}">
                    <button class="btn" type="submit">
                        <i class="bi bi-x-lg"></i>
                    </button>
                </form>
            </div>
        </li>
        {{/each}}
</ul>
</div>

